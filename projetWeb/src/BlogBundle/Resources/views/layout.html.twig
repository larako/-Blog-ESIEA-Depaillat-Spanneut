<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="utf-8">
        <title>{% block title %}BlogBundle{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('bundles/bootstrap-3.3.7/dist/css/bootstrap.css') }}"/>
    </head>
    <body>
        <script language="JavaScript">
            function toggle(source)
            { // Toggle toutes les checkbox
                var allInputs = document.getElementsByTagName("input");

                for (var i = 0, max = allInputs.length; i < max; i++){
                    if (source.type === 'checkbox')
                        if (source.checked === true) allInputs[i].checked = true;
                        else if (source.checked === false) allInputs[i].checked = false;
                }
            }
        </script>

        <script language="JavaScript">
            function convertSize(nbOctets)
            { // Toggle toutes les checkbox
                nbOctets = Math.abs(parseInt(nbOctets, 10));
                var def = [[1, 'octets'], [1024, 'ko'], [1024*1024, 'Mo'], [1024*1024*1024, 'Go'], [1024*1024*1024*1024, 'To']];
                for(var i=0; i<def.length; i++){

                    if(nbOctets<def[i][0]) return (nbOctets/def[i-1][0]).toFixed(2)+' '+def[i-1][1];
                }
            }
        </script>
    {% block body %}
        {% endblock %}
    </body>
</html>